#!/bin/bash

sudo pacman -S --noconfirm \
        rofi zenity dmenu sxhkd redshift  \
        kitty ttf-firacode-nerd neovim ttf-fira-code \
        zsh powerline-fonts base-devel docker docker-compose \
        ttf-jetbrains-mono ttf-jetbrains-mono-nerd tree


echo 'alias vi="nvim"' >> ~/.bashrc
echo 'alias vim="nvim"' >> ~/.bashrc
echo 'alias vi="nvim"' >> ~/.zshrc
echo 'alias vim="nvim"' >> ~/.zshrc
